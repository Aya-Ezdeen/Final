@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "نسيت كلمة المرور؟";
}

<h1  style="color: #FF6700;" >@ViewData["Title"]</h1>
<h4  style="color: #FF6700;"> أدخل البريد الالكتروني لمساعدتك في استرجاع كلمة المرور </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"  style="color: #FF6700;"> البريد الالكتروني</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" >أرسل</button>
        </form>
    </div>
</div>

