                    <div class="mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control  p-3" id="exampleInputPassword1" placeholder="تأكيد كلمة المرور" required>
                    </div>

                    <div class="mb-3">
                        <input asp-for="IDNumber" type="text" class="form-control  p-3" id="exampleInputPassword1" placeholder="رقم الهوية" required>
                    </div>

                    <div class="mb-3">
                        <input  type="file" multiple class="form-control  p-3" id="exampleInputPassword1" placeholder="ملفات الانجاز">
                    </div>

                     

