@model List< Product>

<h1 style="color: #FF6700;">المنتجات </h1>
<hr />
<a asp-controller="Store" asp-action="Create"class="btn btn-primary">Add New</a>
<br />
@if (Model.Any())
{
    <br />
   <table class="table table-hover">
      <tr>
       
          <th style="color: #FF6700;">اسم المنتج</th>
           <th style="color: #FF6700;">سعر المنتج</th>
            <th style="color: #FF6700;">صورة المنتج</th>
           <th style="color: #FF6700;"> وصف المنتج</th>
            <th style="color: #FF6700;">موقع المتجر</th>
             <th style="color: #FF6700;">قسم المتجر</th>
              <th style="color: #FF6700;"> العمليات</th>
      </tr>
        @foreach(var Product in Model)
        {
          <tr>
              <td style="color: #FF6700;">@Product.Name</td>
              <td style="color: #FF6700;">@Product.Price</td>
              <td>
              <img class="img-fluid"  width="200" src="~/Images/@Product.ImageUrl" />
              </td>
              <td style="color: #FF6700;">@Product.Description</td>
              <td style="color: #FF6700;">@Product.Governorate</td>
              <td style="color: #FF6700;">@Product.Section</td>
                <td>
                <a class=" btn btn-warning" href="~/Store/Update/@Product.id" > تحديث</a>
                <a class=" btn btn-danger" href="~/Store/Delete/@Product.id" >حذف </a>
                </td> 
          
         
          </tr>  
        }
    </table> 
}

else{
<div class="alert alert-warning">
    No Data in our database !
</div>
}