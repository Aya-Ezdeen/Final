@model UpdateProductViewModel

<h1>   تعديل العمل</h1>
<hr />

<form asp-action="Update" enctype="multipart/form-data">

     <input   asp-for="WorkerId" type="hidden" /> 

    <div class="row">
       <div class="col-md-6">
          <div class="form-group">
            <label  class="lable-control" style="color: #FF6700;"> اسم العمل</label>
             <input required  asp-for="Name"  class="form-control" />
         </div>
        </div>

      <div class="col-md-6">
          <div class="form-group">
            <label  class="lable-control" style="color: #FF6700;">سعر العمل  </label>
             <input required  asp-for="Price"  class="form-control" />
         </div>
          </div>
  


       <div class="col-md-6">
          <div class="form-group">
            <label  class="lable-control" style="color: #FF6700;"> صورة عمل</label>
             <input type="file" required  asp-for="ImageUrl"  class="form-control" />
         </div>
        </div>
   
            <div class="col-md-6">
          <div class="form-group">
            <label     class="lable-control" style="color: #FF6700;"> وصف العمل</label>
             <input required  asp-for="Description"  class="form-control" />
         </div>
        </div>

     
           <input   asp-for="WorkerId" type="hidden/>
    
                     <div class="col-md-6">
                         <div class="form-group">
                       
                              <label class="lable-control" style="color: #FF6700;"> موقع العمل </label>
                        <select asp-for="Governorate"  class="form-control"  required>
                            
                            <option value="@GoverType.E"   >شمال غزة</option>
                            <option value="@GoverType.D"  >غزة</option>
                            <option value="@GoverType.C" >الوسطى</option>
                            <option value="@GoverType.B" >خانيونس</option>
                            <option value="@GoverType.A " >رفح</option>
                        </select>
                       
                    </div>
                   </div>

                   
                     <div class="col-md-6">
                         <div class="form-group">
                       
                                 <label class="lable-control" style="color: #FF6700;"> قسم العمل </label>
                        <select  asp-for="Section" class="form-control "  required>
                           
                            <option value="@SectionType.البناء"  >البناء</option>
                            <option value="@SectionType.الهندسة">الهندسة</option>
                            <option value="@SectionType.القصارة">القصارة</option>
                            <option value="@SectionType.الجبس">الجبس</option>
                            <option value="@SectionType.الدهان">الدهان</option>
                            <option value="@SectionType.النجارة">النجارة</option>
                            <option value="@SectionType.السباكة">السباكة</option>
                            <option value="@SectionType.الكهرباء">الكهرباء</option>
                            <option value="@SectionType.البلاط">البلاط</option>
                            <option value="@SectionType.الحدادة">الحدادة</option>
                        </select>
                      
                        </div>
                    </div>
        </div>
  
    

    <input type="submit" class="btn btn-warning"  value="Save"/>
     <a asp-controller="~/Worker/ViewProduct" asp-action="Index"class="btn btn-danger">Back</a>
</form>

