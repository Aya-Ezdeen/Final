@model List<Product>

<h1>الاعمال </h1>
<hr />
<a asp-controller="Worker" asp-action="Create"class="btn btn-primary">Add New</a>
<br />
@if (Model.Any())
{
    <br />
   <table class="table table-hover">
      <tr>
       
          <th>اسم العمل</th>
           <th>سعر العمل</th>
            <th>صورة العمل</th>
           <th> وصف العمل</th>
            <th>موقع العمل</th>
             <th>قسم العمل</th>
              <th> العمليات</th>
      </tr>
        @foreach(var Product in Model)
        {
          <tr>
              <td>@Product.Name</td>
              <td>@Product.Price</td>
              <td>
              <img class="img-fluid"  width="200" src="~/Images/@Product.ImageUrl" />
              </td>
              <td>@Product.Description</td>
              <td>@Product.Governorate</td>
              <td>@Product.Section</td>
                <td>
                <a class=" btn btn-warning" href="~/Worker/Update/@Product.id" >Update </a>
                <a class=" btn btn-danger" href="~/Worker/Delete/@Product.id" >Delete </a>
                </td> 
          
         
          </tr>  
        }
    </table> 
}

else{
<div class="alert alert-warning">
    No Data in our database !
</div>
}